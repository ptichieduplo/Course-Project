@model WebApplication1.Models.Task

<div class="text-center">
    <h1>Edit task</h1>
    <div>
        <form asp-controller="Home" asp-action="TasksEdit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Theme">What to do</label>
                <input asp-for="Theme" />
                <span asp-validation-for="Theme"></span>
            </div>
            <div>
                <label asp-for="Tags"></label>
                <input asp-for="Tags" />
                <span asp-validation-for="Tags"></span>
            </div>
            <div>
                <label asp-for="CorrectAnswer"></label>
                <input asp-for="CorrectAnswer" />
            </div>
            <div class="form-group">
                <label asp-for="EstimatedAnswer1"></label>
                <input asp-for="EstimatedAnswer1" />
                <label asp-for="EstimatedAnswer2"></label>
                <input asp-for="EstimatedAnswer2" />
                <label asp-for="EstimatedAnswer3"></label>
                <input asp-for="EstimatedAnswer3" />
            </div>
            <div class="form-group">
                <input asp-for="ImageUrl" class="form-control" type="hidden" />
                <input asp-for="ImageStorageName" class="form-control" type="hidden" />
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="Author" value=@User.Identity.Name/>
            </div>
            <input type="submit" value="Confirm"/>
        </form>
    </div>
</div>